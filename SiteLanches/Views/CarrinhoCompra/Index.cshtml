@model CarrinhoCompraViewModel

<div class="container"
<div class="row"
    <img src="~/images/carrinho-de-compras.png " />
    <div> Seu Carrinho de Compras: </div>

    <table class="table table-bordered table-striped">

        <thead>
            <tr>
                <th>Quantidade</th>
                <th>Lanche</th>
                <th class="text-right "> Preço</th>
                <th class="text-right "> SubTotal</th>
                <th> </th
              </tr>
        <thead>

           
            <tbody>
                @foreach (var item in Model.CarinhoCompra.CarrinhoCompraItems)
                    {
                        <tr> 
                            <td class="text-center">@item.Quantidade </td>
                            <td class="text-left">@item.Lanches </td>
                                <td class="text-right">@item.Lanches.Preco.ToString("c") </td>
                                <td class="text-right">
                                 @((item.Quantidade*item.Lanches.Preco).ToString("c"))   
      
                            <td class="text-center">
                                <a asp-controller="CarrinhoCompra" asp-action="RemoveDoCarrinho"
                                asp-route-lancheId ="@item.Lanches.LancheId"><img src="~/images/excluir.png"/>  
                            </a>
                          </td>
                       
                          </tr>
                      }  

            </tbody>
                <tfoot>
                    <tr>
                    <td colspan="3" class="text-rigth">Total</td>
                    <td class="text-right">@Model.CarrinhoCompraTotal.ToString("c")  </td>

                    </tr>
                </tfoot>
            
    </table>
    <div class="text-right">
    
    <a class="btn btn-outline-success" asp-controller="Pedido" asp-action="chekout"> Encerrar Pedido</a>
    <a class="btn btn-outline-primary" asp-controller="Lanche" asp-action="Listar"> Continuar Comprando</a>

    
    </div>

    <br/>
</div>
</div>









